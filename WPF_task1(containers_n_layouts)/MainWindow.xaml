                <Button Margin="2" Foreground="Olive" MinWidth="100">Olive</Button>
                <Button Margin="2" Foreground="Green" MinWidth="100">Green</Button>
                <Button Margin="2" Foreground="Lime" MinWidth="100">Lime</Button>
                <Button Margin="2" Foreground="Yellow" MinWidth="100">Yellow</Button>
                <Button Margin="2" Foreground="Orange" MinWidth="100">Orange</Button>
                <Button Margin="2" Foreground="Red" MinWidth="100">Red</Button>
                <Button Margin="2" Foreground="Maroon" MinWidth="100">Maroon</Button>
                <Button Margin="2" Foreground="Fuchsia" MinWidth="100">Fuchsia</Button>
                <Button Margin="2" Foreground="Purple" MinWidth="100">Purple</Button>
                <Button Margin="2" Foreground="Black" MinWidth="100">Black</Button>
                <Button Margin="2" Foreground="Silver" MinWidth="100">Silver</Button>
                <Button Margin="2" Foreground="Gray" MinWidth="100">Gray</Button>
                <Button Margin="2" Foreground="White" MinWidth="100">White</Button>
            </WrapPanel>
        </TextBlock>
    </Grid>
</Window>
