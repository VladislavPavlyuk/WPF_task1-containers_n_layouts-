        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="500">
    <Grid>                
          <Grid.ColumnDefinitions>
            <ColumnDefinition/>              
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        
        <TextBlock Grid.ColumnSpan="2">
            <WrapPanel >
                <Button Margin="2" Foreground="Navy" MinWidth="100">Navy</Button>
                <Button Margin="2" Foreground="Blue" MinWidth="100">Blue</Button>
                <Button Margin="2" Foreground="Aqua" MinWidth="100">Aqua</Button>
